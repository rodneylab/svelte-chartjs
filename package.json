		"@sveltejs/kit": "1.0.1",
		"@types/chart.js": "^2.9.37",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"chart.js": "^4.1.1",
		"commitlint": "^17.3.0",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
